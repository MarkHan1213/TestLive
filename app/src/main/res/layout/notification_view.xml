<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_view_all"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/color_pure_black"
>

    <LinearLayout 
		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@drawable/color_pure_black"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
	>
	
        <ImageView 
			android:id="@+id/notification_view_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_launcher"
			android:scaleType="fitXY"
			android:adjustViewBounds="true"
			android:layout_marginLeft="10dip"
			android:contentDescription="@null"
		/>
		
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingLeft="10dip"
		>
		
<!-- 		    <TextView  
		    	android:id="@+id/notification_view_title" 
		    	android:layout_width="fill_parent" 
 		    	android:layout_height="wrap_content" 
 		    	android:text="@string/app_name" 
 		    	style="@style/text_style_font17_white" 
 		    /> -->
		    
		    <TextView 
		    	android:id="@+id/notification_view_content"
		    	android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="3dip"
		    	android:maxLines="3"
		    	android:ellipsize="end"
		    	style="@style/text_style_font13_white"
		    />
		    
		</LinearLayout>
        
    </LinearLayout>
    
</RelativeLayout>